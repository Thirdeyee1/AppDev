<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/nameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_name"
            android:maxLength="30"
            android:textSize="20sp"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/loadEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEdit"
            android:hint="@string/dialog_load"
            android:textSize="20sp"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/quantityEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loadEdit"
            android:hint="@string/dialog_quantity"
            android:textSize="20sp"
            android:importantForAutofill="no"
            android:inputType="number" />

        <EditText
            android:id="@+id/hrsDailyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantityEdit"
            android:hint="@string/dialog_daily"
            android:textSize="20sp"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/loadEdit"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/loadEdit"
            android:hint="@string/select"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
